//==================================================================// iPhone Tab Bar// Timur Prokopiev 2011//==================================================================function setDefaultValues() {  var values = new Array();  // Active Tab  values.push({ name:"Active", type:"ComboBox", value:"None,None,First,Second,Third,Fourth"});// Label1  values.push({ name:"Label1", type:"text", value:"Label"});// Label2  values.push({ name:"Label2", type:"text", value:"Label"});// Label3  values.push({ name:"Label3", type:"text", value:"Label"});// Label4  values.push({ name:"Label4", type:"text", value:"Label"});Widget.elem.customData["currentValues"] = values;}function applyCurrentValues() {  var values = Widget.elem.customData["currentValues"];  var state  = values[0].value.split(",")[0].toString();if (state == "None") {  Widget.GetObjectByName("highlight1").visible = false;  Widget.GetObjectByName("highlight2").visible = false;  Widget.GetObjectByName("highlight3").visible = false;  Widget.GetObjectByName("highlight4").visible = false;		}else if (state == "First") {  Widget.GetObjectByName("highlight1").visible = true;  Widget.GetObjectByName("highlight2").visible = false;  Widget.GetObjectByName("highlight3").visible = false;  Widget.GetObjectByName("highlight4").visible = false;  Widget.GetObjectByName("label1").opacity = 100;		}else if (state == "Second") {  Widget.GetObjectByName("highlight1").visible = false;  Widget.GetObjectByName("highlight2").visible = true;  Widget.GetObjectByName("highlight3").visible = false;  Widget.GetObjectByName("highlight4").visible = false;  Widget.GetObjectByName("label2").opacity = 100;		}else if (state == "Third") {  Widget.GetObjectByName("highlight1").visible = false;  Widget.GetObjectByName("highlight2").visible = false;  Widget.GetObjectByName("highlight3").visible = true;  Widget.GetObjectByName("highlight4").visible = false;  Widget.GetObjectByName("label3").opacity = 100;		}else if (state == "Fourth") {  Widget.GetObjectByName("highlight1").visible = false;  Widget.GetObjectByName("highlight2").visible = false;  Widget.GetObjectByName("highlight3").visible = false;  Widget.GetObjectByName("highlight4").visible = true;  Widget.GetObjectByName("label4").opacity = 100;		}  Widget.GetObjectByName("label1").textChars = values[1].value;  Widget.GetObjectByName("label2").textChars = values[2].value;  Widget.GetObjectByName("label3").textChars = values[3].value;  Widget.GetObjectByName("label4").textChars = values[4].value;}switch (Widget.opCode){	case 1: setDefaultValues();   break;	case 2: applyCurrentValues(); break;}